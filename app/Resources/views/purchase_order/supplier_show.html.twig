{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ supplier.name }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Purchase Orders
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="table-purchase-orders">
                        <thead>
                            <tr>
                                <th>Number</th>
                                <th>Type</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for purchaseOrder in supplier.purchaseOrders %}
                            <tr>
                                <td>
                                    <a href="{{ path('purchase_order', { 'id': purchaseOrder.id }) }}">
                                        {{ purchaseOrder.number }}
                                    </a>
                                </td>
                                <td>{{ purchaseOrder.type|upper }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

{% endblock %}
