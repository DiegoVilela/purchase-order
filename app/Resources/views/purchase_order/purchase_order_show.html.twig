{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ purchaseOrder.number }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {{ purchaseOrder.number }} - {{ purchaseOrder.supplier.name }}
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Account</th>
                                <th></th>
                                <th>Amount</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for balance in balances %}
                            <tr>
                                <td>
                                    <a href="{{ path('account', { 'id': balance.account.id }) }}">
                                        {{ balance.account.number }}
                                    </a>
                                </td>
                                <td>{{ balance.account.name }}</td>
                                <td class="text-right">{{ balance.amount|number_format }}</td>
                                <td>{{ balance.date|date }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

{% endblock %}
