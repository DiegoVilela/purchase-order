{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Purchase Orders</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">

                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <input type="submit" value="Search" />
                    {{ form_end(form) }}

                    <table width="100%" class="table table-striped table-bordered table-hover" id="table-purchase-orders">
                        <thead>
                            <tr>
                                <th>Number</th>
                                <th>Supplier</th>
                                <th>Type</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for purchaseOrder in purchaseOrders %}
                            <tr>
                                <td><a href="{{ path('purchase_order', { 'id': purchaseOrder.id }) }}">{{ purchaseOrder.number }}</a></td>
                                <td>{{ purchaseOrder.supplier.name }}</td>
                                <td>{{ purchaseOrder.type|upper }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function() {
            $('#table-purchase-orders').DataTable({
                paging: false,
                info: true,
                order: [[0, 'asc']],
                responsive: true
            });
        });
    </script>
{% endblock %}